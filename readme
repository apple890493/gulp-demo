
   gulp.task('{task name }', function(){})
   gulp.src('{specific file path}')
   .pipe('/to do something/')
   gulp.dest('{specific export path}')
   gulp.watch('監控')


   ! pipe 串接概念 ! 使用各式各樣的套件
   來源(gulp.src) -> 編譯(pipe(coffee)) -> 合併(pipe(concat(..))) -> 壓縮(pipe(uglify())) -> 輸出(pipe(gulp.dest()))
    

